---
const lists = [
  {
    name: 'Home',
    url: '/',
  },
  {
    name: 'Pokedex',
    url: '/pokedex',
  },
];

const { pathname } = Astro.url;

const baseClass = 'hover:border-b-[3px] border-b-orange-300';
---

<nav class='flex items-end justify-between p-4 bg-white'>
  <h1 class='text-2xl font-semibold'>Pokedex</h1>
  <ul class='flex basis-4/5 gap-x-8'>
    {
      lists.map((list) => {
        return (
          <li>
            <a
              class:list={[baseClass, { 'border-b-[3px]': list.url === pathname }]}
              href={list.url}>
              {list.name}
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>
